{% extends 'AppBundle:Admin:index.html.twig' %}

 {% block mainAdminContent %}
     <div class="page-title" xmlns="http://www.w3.org/1999/html">
         <h3>{{ "Teasers" | trans }}</h3>
     </div>

     <div class="row">
         <div class="col-md-12">
             <div class="grid simple">

                 <div class="grid-body no-border"> <br>
                     <div class="row">

                             <table class="table table-bordered">
                                 <thead>
                                     <tr>
                                         <th>Группы</th>
                                         <th>Ссылки</th>
                                         <th>Рубрика</th>
                                         <th>CTR</th>
                                         <th>Показов</th>
                                     </tr>
                                 </thead>
                             {% for group in groups %}

                                 {#{{ dump(group) }}#}

                                     <tr class="bg-purple" style="color:#fff;">
                                         <td colspan="5"><h3>{{ group.group_name }}</h3></td>
                                     </tr>

                                     <tr>
                                         <td>
                                             <div data-toggle="buttons-radio" class="btn-group btn-group-sm">
                                                 <button title="редактировать" class="btn btn-primary"><i class="fa fa-pencil"></i></button>
                                                 <button title="показать/скрыть" class="btn btn-warning">
                                                     <i class="fa fa-eye"></i>
                                                     {{ group.teasers | length }}
                                                 </button>
                                             </div>
                                         </td>
                                         <td>
                                             {% for link in group.links %}
                                                <span title="{{ link }}">{{ link }}</span><br>
                                             {% endfor %}
                                         </td>
                                         <td>{{ group.rubric_name }}</td>
                                         <td>{{ group.ctr }}</td>
                                         <td>{{ group.views }}</td>
                                     </tr>
                             {% endfor %}
                             </table>

                         <div class="clearfix clear"></div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}

