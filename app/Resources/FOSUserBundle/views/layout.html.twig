{% extends ':default:index.html.twig' %}

{% block auth %}

    <div class="container">
        <div class="row login-container animated fadeInUp">
            <div class="col-md-8 col-md-offset-2 tiles white no-padding">
                <div class="p-t-30 p-l-40 p-b-20 xs-p-t-10 xs-p-l-10 xs-p-b-10">
                    <h2 class="normal">ZSTeaser</h2>

                    <a href="{{ path('fos_user_security_login') }}" class="btn btn-primary btn-cons" id="login_toggle">Login</a> or&nbsp;&nbsp;
                    <a href="{{ path('fos_user_registration_register') }}" class="btn btn-info btn-cons" id="register_toggle"> Create an account</a>

                </div>
                <div class="tiles grey p-t-20 p-b-20 text-black">

                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            <div class="{{ type }}">
                                {{ message|trans({}, 'FOSUserBundle') }}
                            </div>
                        {% endfor %}
                    {% endfor %}

                    {% if error is defined and error is not null %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}


                    {% block content %}
                    <div class="col-lg-12">
                        {% block fos_user_content %}
                        {% endblock %}
                    </div>
                    {% endblock %}

                </div>

            </div>
        </div>
    </div>
{% endblock %}
