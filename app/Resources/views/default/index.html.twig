{% extends 'base.html.twig' %}

{% block bodyClass %}
    frontend
{% endblock %}

{% block body %}

    <div class="container">
        <div class="compressed">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="{{ path('homepage') }}">
                    {#<img width="119" height="22" alt="" data-src-retina="assets/img/logo_2x.png" data-src="assets/img/logo.png" src="assets/img/logo.png">#}
                    <h3 class="text-white">tzrs.co</h3>
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">

                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li><a class="text-white" href="{{ path('admin_home') }}">{{ "Dashboard" | trans }}</a></li>
                    {% else %}
                        <li><a class="text-white" href="{{ path('homepage') }}">Home</a></li>
                    {% endif %}

                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <li>
                            <a class="text-white" type="button" class="disabled">
                                {{ 'layout.logged_in_as' | trans  }} | {{ app.user.username }}
                            </a>
                        </li>
                        <li>
                            <a class="text-white" href="{{ path('fos_user_security_logout') }}">
                                <i class="fa fa-unlock"></i>&nbsp;&nbsp;Log Out
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a class="text-white" href="{{ path('fos_user_security_login') }}">
                                <i class="fa fa-lock"></i>&nbsp;&nbsp;Log In
                            </a>
                        </li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>


        <div class="row">
            <div class="col-md-12">
                {% block auth %}
                <div class="grid simple animated fadeInUp col-lg-12">
                    <div class="grid-title no-border">

                    </div>
                    <div class="grid-body no-border">
                        <h4>Managing your teaser ads made easy</h4>
                        <div class="color-bands green"></div>
                        <div class="color-bands purple"></div>
                        <div class="color-bands red"></div>
                        <div class="color-bands blue"></div>
                        <div class="color-bands green"></div>
                        <br>
                        <p>With tzrs.co you can easily create blocks of teaser ads and place them on your websites.</p>
                        <p>You'll find all the statistics about views and clicks inside, represented in beautiful charts.</p>
                        <p>tzrs.co lets you create experiments on your teaser blocks and compare results for even better performance.</p>

                    </div>


                    <div id="tzrs_8_1_1_1"></div>

                    <div class="clear clearfix"></div>

                    <div id="tzrs_8_1_1_5"></div>


                    {#<div id="tzrs_2_2_4_5"></div>#}
                    {#<div class="clear clearfix"></div>#}
                    {#<div id="tzrs_2_1_2_4"></div>#}



                </div>

                {% endblock auth %}
            </div>
        </div>


    </div>
{% endblock %}
